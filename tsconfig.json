{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2023",                                
    "rootDir": "./src",
    "outDir": "./dist",  
    "moduleResolution": "bundler", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules","dist"]
}